<% if user_signed_in? %>

  <table class="table table-striped table-bordered table-hover" >
    <thead class="table-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone Number</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @friends.each do |friend| %>
        <% if current_user.id == friend.user_id %>
        <tr>
          <td>
      <%= link_to friend.first_name + ' ' + friend.last_name, friend, class:"text-decoration-none"  %>    
          </td>
          <td><%=friend.email %></td>
          <td><%=friend.phone %></td>
          <td><%= button_to "Delete Friend", friend, method: :delete, class:'btn btn-outline-danger', data:{confirm: "Are you sure?"} %></td>
        </tr>
      <% end %>
      <% end %>
    </tbody>
  </table>

  <%= link_to "New Friend", new_friend_path, class:"btn btn-secondary"%>
<% else %>
  <h1>Welcome to my Web Application</h1>
  Please Create an account to help you better organize your contacts.
<% end %>